@model Student

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/Modules/bootstrap/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/css/style.css">
    <title>Thanks For Registiration</title>
</head>
<body>
    <div class="container m-4">
        <div class="card mx-auto" style="width: 500px;">
            <div class="card-header"> 
                <h2> @Model.Name, Hello !</h2>
            </div>
        </div>
        <div class="card-body">
            <hr>
            @if (@Model.Confirm == true)
            {
            <span> Thank you for your registration </span>
            <div>
                <p> Your Email : @Model.Email </p>
                <p> Your Phone : @Model.Phone </p>
            </div>
            <div> 
                <a asp-action="List">View</a> Other Participants
            </div>
            }
            else
            {
               <span> We are sorry! We hope you change your opinion! </span>
            }
        </div>
    </div>
</body>
</html>